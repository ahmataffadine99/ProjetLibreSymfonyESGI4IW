{# templates/pages/contact.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">Contactez-nous</h1>

        <div class="bg-white shadow-lg rounded-xl p-8 mb-8">
            <p class="text-gray-700 leading-relaxed text-center mb-6">
                Si you have questions, suggestions, or encounter a problem with "Mon Collectionneur," feel free to send us a message using the form below.
            </p>

            <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Envoyez-nous un message</h2>

            {# Début du formulaire Symfony #}
            {{ form_start(contactForm, {'attr': {'class': 'space-y-6'}}) }}

                {# Affichage des champs individuellement pour un contrôle plus fin du layout #}
                <div>
                    {{ form_label(contactForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.name, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm', 'placeholder': 'Votre nom'}}) }}
                    {{ form_errors(contactForm.name) }} {# Affiche les erreurs de validation #}
                </div>

                <div>
                    {{ form_label(contactForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.email, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm', 'placeholder': 'Votre adresse email'}}) }}
                    {{ form_errors(contactForm.email) }}
                </div>

                <div>
                    {{ form_label(contactForm.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.subject, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm', 'placeholder': 'Sujet de votre message'}}) }}
                    {{ form_errors(contactForm.subject) }}
                </div>

                <div>
                    {{ form_label(contactForm.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.message, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm h-32 resize-y', 'placeholder': 'Votre message'}}) }}
                    {{ form_errors(contactForm.message) }}
                </div>

                {# Bouton de soumission du formulaire #}
                <button type="submit" class="
                    w-full sm:w-auto px-6 py-3
                    bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md
                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-75
                    transition duration-300 ease-in-out
                ">
                    Envoyer le message
                </button>

            {{ form_end(contactForm) }}
            {# Fin du formulaire #}

            <hr class="my-8 border-gray-200">

            <h2 class="text-2xl font-semibold text-gray-700 mb-4 text-center">Autres moyens de contact</h2>
            <p class="text-gray-700 leading-relaxed text-center">
                You can also send us an email directly at:
                <a href="mailto:contact@moncollectionneur.com" class="text-blue-600 hover:underline font-medium">contact@moncollectionneur.com</a>
            </p>
        </div>
    </div>
{% endblock %}