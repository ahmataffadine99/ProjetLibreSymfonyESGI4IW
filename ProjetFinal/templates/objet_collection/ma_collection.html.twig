{# templates/objet_collection/ma_collection.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ma Collection{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6">Ma Collection</h1>

        <p class="mb-6">
            <a href="{{ path('toutes_les_collections') }}" class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">
                Voir toutes les collections du site
            </a>
        </p>

        {# Votre filtre de recherche existant - NE PAS TOUCHER #}
        <form method="get" class="mb-6">
            <div class="flex items-center space-x-4">
                <div>
                    <label for="type" class="block text-gray-700 text-sm font-bold mb-1">Filtrer par type :</label>
                </div>
                <div>
                    <select name="type" id="type" class="shadow border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Tous les types</option>
                        <option value="livre" {% if app.request.get('type') == 'livre' %}selected{% endif %}>Livres</option>
                        <option value="vinyle" {% if app.request.get('type') == 'vinyle' %}selected{% endif %}>Vinyles</option>
                        <option value="jeu-video" {% if app.request.get('type') == 'jeu-video' %}selected{% endif %}>Jeux Vidéo</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out">
                        Filtrer
                    </button>
                </div>
            </div>
        </form>

        {% if objetsWithType is empty %}
            <p class="text-lg text-gray-700">Votre collection est vide pour le moment.</p>
        {% else %}
            <div class="overflow-x-auto bg-white shadow-md rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date d'ajout</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Catégorie</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tags</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Emplacement</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {# item est maintenant un tableau associatif avec une clé 'type' #}
                        {% for item in objetsWithType %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">{{ item.nom }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {# AFFICHAGE DIRECT DU TYPE QUI EST DÉSORMAIS UNE CHAÎNE #}
                                    {{ item.type }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ item.dateAjout|date('Y-m-d H:i:s') }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ item.statut ? item.statut.nom : '' }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ item.categorie ? item.categorie.nom : '' }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% for tag in item.tags %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">{{ tag.nom }}</span>{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ item.emplacement ? item.emplacement.nom : '' }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <a href="{{ path('objet_collection_details', {'id': item.id}) }}" class="text-blue-600 hover:text-blue-900 mr-2">Détails</a>
                                    {# Utilisation de item.originalObject pour les Voters si la clé existe #}
                                    {# Sinon, vous devrez peut-être recharger l'objet dans le Voter par son ID #}
                                    {% if item.originalObject is defined and is_granted('EDIT', item.originalObject) %}
                                        <a href="{{ path('objet_modifier', {'id': item.id}) }}" class="text-yellow-600 hover:text-yellow-900 mr-2">Modifier</a>
                                    {% else %}
                                        {# Optionnel: si le Voter n'est pas utilisé ou si item.originalObject n'est pas passé #}
                                        <a href="{{ path('objet_modifier', {'id': item.id}) }}" class="text-yellow-600 hover:text-yellow-900 mr-2">Modifier</a>
                                    {% endif %}

                                    {% if item.originalObject is defined and is_granted('DELETE', item.originalObject) %}
                                        <form method="post" action="{{ path('objet_supprimer', {'id': item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet objet ?');" class="inline-block">
                                            <button type="submit" class="text-red-600 hover:text-red-900">Supprimer</button>
                                        </form>
                                    {% else %}
                                        {# Optionnel: si le Voter n'est pas utilisé ou si item.originalObject n'est pas passé #}
                                        <form method="post" action="{{ path('objet_supprimer', {'id': item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet objet ?');" class="inline-block">
                                            <button type="submit" class="text-red-600 hover:text-red-900">Supprimer</button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        <div class="mt-8 flex flex-wrap gap-4">
            <a href="{{ path('objet_ajouter', {'type': 'livre'}) }}" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">Ajouter un Livre</a>
            <a href="{{ path('objet_ajouter', {'type': 'vinyle'}) }}" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">Ajouter un Vinyle</a>
            <a href="{{ path('objet_ajouter', {'type': 'jeu-video'}) }}" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">Ajouter un Jeu Vidéo</a>
        </div>

        <div class="mt-8">
            <a href="{{ path('homepage') }}" class="inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded transition duration-300 ease-in-out">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}